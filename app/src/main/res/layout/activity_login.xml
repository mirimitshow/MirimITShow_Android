<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:gravity="center"
    >

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/login_logo_image"
            android:layout_width="120dp"
            android:layout_height="22.7dp"
            android:src="@drawable/scan_us_logo" />

        <FrameLayout
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_logo_image"
            android:id="@+id/login_idInput_layout"
            android:layout_width="wrap_content"
            android:layout_marginTop="106.7dp"
            >
            <EditText
                android:paddingLeft="56dp"
                android:hint="아이디"
                android:textColorHint="@color/txtColor"
                android:textColor="@color/txtColor"
                android:id="@+id/login_idInput_editText"
                android:layout_width="283dp"
                android:layout_height="51dp"
                android:background="@drawable/login_edit_conner" />

            <ImageView
                android:layout_marginLeft="14dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/login_idIcon_img"
                android:layout_width="32.7dp"
                android:layout_height="32.7dp"
                android:src="@drawable/user_id" />

        </FrameLayout>

        <FrameLayout
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_idInput_layout"
            android:id="@+id/login_pwInput_layout"
            android:layout_width="wrap_content"
            >
            <ImageView
                android:layout_marginLeft="14dp"
                android:layout_gravity="center_vertical"
                android:layout_width="32.7dp"
                android:layout_height="32.7dp"
                android:src="@drawable/locked_icon"
                />
            <EditText
                android:textColorHint="@color/txtColor"
                android:textColor="@color/txtColor"
                android:hint="비밀번호"
                android:paddingLeft="56dp"
                android:id="@+id/login_pwInput_editText"
                android:layout_width="283dp"
                android:layout_height="51dp"
                android:background="@drawable/login_edit_conner"
                android:inputType="textPassword" />
        </FrameLayout>



        <Button
            android:text="로그인"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:id="@+id/login_login_btn"
            android:layout_marginTop="12dp"
            android:background="@drawable/login_btn_custom"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/login_pwInput_layout"
            android:layout_width="283dp"
            android:layout_height="51dp"
            />
        <TextView
            android:textColor="@color/txtColor"
            android:id="@+id/login_join_txt"
            android:layout_marginTop="12dp"
            android:layout_below="@id/login_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입 하기"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            />


    </RelativeLayout>



</LinearLayout>