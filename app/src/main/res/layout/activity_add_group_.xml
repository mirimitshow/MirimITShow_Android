<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddGroupActivity"
    android:orientation="vertical"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그룹명"
            />
        <EditText
            android:id="@+id/addGroup_groupName_editText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그룹코드"
            />
        <TextView

            android:textIsSelectable="true"
            android:id="@+id/addGroup_groupCode_textView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="asfe"
            />
        <Button
            android:id="@+id/addGrop_copyCode_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그룹코드 복사"
            />
    </LinearLayout>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대표사진"
        />
    <LinearLayout
        android:id="@+id/addGroup_addImage_Linear"
        android:gravity="center"
        android:background="@color/colorLightGray"
        android:layout_width="320dp"
        android:layout_height="210dp">
        <ImageView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/addGroup_mainImage_image"
            />
        <ImageView
            android:id="@+id/addGroup_plus_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_icon"/>

    </LinearLayout>
    <Button
        android:id="@+id/addGrop_setTimetable_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간표 설정하기"
        />

    <Button
        android:id="@+id/addGrop_setgroup_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹생성"
        />



</LinearLayout>