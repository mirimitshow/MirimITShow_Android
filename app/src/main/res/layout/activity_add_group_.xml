<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddGroupActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin"
        android:text="그룹추가"
        android:textColor="@color/txtColor"
        android:textSize="25sp" />

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:id="@+id/addGroup_wrapper_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/txtColor"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="그룹명"
                />
            <EditText
                android:id="@+id/addGroup_groupName_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/txtColor"
                android:layout_weight="0.4"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="그룹초대코드"
                />
            <TextView
                android:textColor="@color/txtColor"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="0.3"
                android:textIsSelectable="true"
                android:id="@+id/addGroup_groupCode_textView"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="ASDFJ8"
                />
            <Button
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorMain"
                android:layout_weight="0.3"
                android:id="@+id/addGrop_copyCode_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="복사하기"
                />
        </LinearLayout>
        <TextView
            android:textColor="@color/txtColor"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대표사진"
            />

        <LinearLayout
            android:id="@+id/addGroup_addImage_Linear"
            android:layout_width="370dp"
            android:layout_height="185dp"
            android:background="@color/colorLightGray"
            android:gravity="center"
            android:orientation="horizontal"/>
            
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_above="@+id/addGrop_setgroup_btn"
                android:textColor="@color/colorWhite"
                android:layout_marginBottom="11dp"
                android:background="@drawable/login_btn_custom"
                android:id="@+id/addGrop_setTimetable_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="시간표 설정하기"
                />

            <Button
                android:layout_marginTop="10dp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/colorWhite"
                android:background="@drawable/login_btn_custom"
                android:id="@+id/addGrop_setgroup_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="그룹생성"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>